<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  
  <object class="GtkBox" id="device_details_content">
    <property name="orientation">vertical</property>
    
    <child>
      <object class="AdwHeaderBar" id="header_bar">
        <property name="show-end-title-buttons">true</property>
      </object>
    </child>
    
    <child>
      <object class="GtkScrolledWindow">
        <property name="vexpand">true</property>
        <property name="hexpand">true</property>
        
        <child>
          <object class="GtkBox">
            <property name="orientation">horizontal</property>
            <property name="spacing">32</property>
            <property name="margin-top">24</property>
            <property name="margin-bottom">24</property>
            <property name="margin-start">24</property>
            <property name="margin-end">24</property>
            
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">12</property>
                <property name="valign">start</property>
                
                <child>
                  <object class="GtkLabel">
                    <property name="label">Screenshot</property>
                    <property name="halign">start</property>
                    <attributes>
                      <attribute name="weight" value="bold"/>
                      <attribute name="scale" value="1.2"/>
                    </attributes>
                  </object>
                </child>
                
                <child>
                  <object class="GtkImage" id="screenshot_image">
                    <property name="pixel-size">300</property>
                    <property name="icon-name">image-missing</property>
                  </object>
                </child>
                
                <child>
                  <object class="GtkButton" id="refresh_screenshot_btn">
                    <property name="label">Capture Screenshot</property>
                    <property name="icon-name">camera-photo-symbolic</property>
                    <property name="tooltip-text">Capture screenshot only</property>
                    <style>
                      <class name="suggested-action"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">24</property>
                <property name="hexpand">true</property>
                <property name="valign">start</property>
                
                <child>
                  <object class="AdwPreferencesGroup" id="basic_info_group">
                    <property name="title">Basic Information</property>
                  </object>
                </child>
                
                <child>
                  <object class="AdwPreferencesGroup" id="specs_group">
                    <property name="title">Specifications</property>
                  </object>
                </child>
                
                <child>
                  <object class="AdwPreferencesGroup" id="connection_group">
                    <property name="title">Connection</property>
                  </object>
                </child>
                
                <child>
                  <object class="GtkBox">
                    <property name="orientation">horizontal</property>
                    <property name="spacing">12</property>
                    <property name="halign">start</property>
                    <property name="margin-top">12</property>
                    
                    <child>
                      <object class="GtkButton" id="refresh_all_btn">
                        <property name="label">Refresh All</property>
                        <property name="icon-name">view-refresh-symbolic</property>
                        <property name="tooltip-text">Refresh device info and screenshot</property>
                      </object>
                    </child>
                    
                    <child>
                      <object class="GtkButton" id="remove_device_btn">
                        <property name="label">Remove Device</property>
                        <property name="icon-name">user-trash-symbolic</property>
                        <style>
                          <class name="destructive-action"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
